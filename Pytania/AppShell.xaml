<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Pytania.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Pytania.Views"
    Shell.TabBarBackgroundColor="{StaticResource Gray300}"
    Shell.NavBarIsVisible="False"
    Shell.TabBarIsVisible="True"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Title="Nowa gra">
            <ShellContent
                ContentTemplate="{DataTemplate local:NewGamePage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Załaduj grę">
            <ShellContent
                ContentTemplate="{DataTemplate local:LoadPage}"
                Route="MainPage" />
        </Tab>
    </TabBar>

</Shell>
