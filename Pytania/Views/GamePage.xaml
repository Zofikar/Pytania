<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pytania.Views.GamePage"
             xmlns:viewmodels="clr-namespace:Pytania.ViewModels"
             x:DataType="viewmodels:GamePageViewModel"
             Shell.TabBarIsVisible="False"
             Title="GamePage">
    <VerticalStackLayout>
        <Label Text="{Binding GameFile.FilePath}"/>
        <Label Text="{Binding GameFile.FileExension}"/>
        <Label Text="{Binding GameFile.FileName}"/>
        <Label Text="{Binding GameFile.FileNameWithoutExtension}"/>
    </VerticalStackLayout>
</ContentPage>