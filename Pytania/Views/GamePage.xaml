<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pytania.Views.GamePage"
             xmlns:viewmodels="clr-namespace:Pytania.ViewModels"
             x:DataType="viewmodels:GamePageViewModel"
             Shell.TabBarIsVisible="False"
             Title="GamePage">
    <Grid RowDefinitions="*,Auto,*,Auto,Auto,*" ColumnDefinitions="*,3*,*">
        <Label Text="{Binding GameFile.FileNameWithoutExtension, StringFormat='Game: {0}'}" FontSize="Title" HorizontalTextAlignment="Center" Grid.Column="1" Grid.Row="0"/>
        <Label Text="{Binding GameFile.FileNameWithoutExtension, StringFormat='Game: {0}'}" FontSize="Title" HorizontalTextAlignment="Center" Grid.Column="1" Grid.Row="2"/>
        <Button Text="{Binding GameFile.FileNameWithoutExtension, StringFormat='Game: {0}'}" FontSize="Subtitle" Grid.Column="1" Grid.Row="3"/>
    </Grid>
</ContentPage>